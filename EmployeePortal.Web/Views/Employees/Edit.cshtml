@{
    ViewData["Title"] = "Edit Employee";
}

@model EmployeePortal.Web.Models.Entities.Employee

<h2>Edit Employee</h2>

<form method="post">

    @* empId *@
    <div class="mt-3">
        <label class="form-label">ID</label>
        <input type="text" class="form-control" asp-for="empId" readonly/>
    </div>

    @* empFullName *@
    <div class="mt-3">
        <label class="form-label">Full Name</label>
        <input type="text" class="form-control" asp-for="empFullName" />
    </div>

    @* empDept *@
    <div class="mt-3">
        <label class="form-label">Department</label>
        <input type="text" class="form-control" asp-for="empDept" readonly/>
    </div>

    @* salary *@
    <div class="mt-3">
        <label class="form-label">Salary</label>
        <input type="text" class="form-control" asp-for="salary" />
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
        <button type="submit" class="btn btn-danger ms-3" asp-action="Delete" asp-controller="Employees">Delete</button>
    </div>

</form>