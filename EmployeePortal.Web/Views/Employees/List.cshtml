@{
}
@model List<EmployeePortal.Web.Models.Entities.Employee>

<h1> List of Employees</h1>
<table class="table">
    <thread>
        <tr>
            <th>ID</th>
            <th>Full Name</th>
            <th>Department</th>
            <th>Salary</th>

        </tr>
    </thread>
    <tbody>
        @foreach(var employee in Model)
        {
            <tr>
                <td>@employee.empId</td>
                <td>@employee.empFullName</td>
                <td>@employee.empDept</td>
                <td>@employee.salary</td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-controller="Employees" asp-route-id="@employee.empId">Edit</a>
                </td>
            </tr>
        }
    </tbody>

</table>
